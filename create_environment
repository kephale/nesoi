git clone git@github.com:kephale/napari-qrcode.git  || true
pip install --no-deps -e ./napari-qrcode

# ===== Setup pulser =====
git clone git@github.com:kephale/pulser.git  || true
# pip install --no-deps -e ./pulser

# ===== Setup KLEIO-Python-SDK =====
